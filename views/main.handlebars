<html>
	<head>
		<title>Chefbox</title>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
		<!--[if lte IE 8]><script src="js/ie.html5shiv.js"></script><![endif]-->
    <link rel="stylesheet" href="css/main.css" />
		<!--[if lte IE 8]><link rel="stylesheet" href="css/ie8.css" /><![endif]-->
		<!--[if lte IE 9]><link rel="stylesheet" href="css/ie9.css" /><![endif]-->
	</head>
	
	<body style="padding: 3%;">	
    <p align="right" style="margin: 15% 0;">
      <!-- Navigation -->
      {{#if login}}
        {{> main-navbar-loggedin}}
      {{else}}
        {{> main-navbar}}
      {{/if}}

    </p>
		<!-- Header -->
    <header id="header">
      <h1>Chefbox</h1>
      <p>Enjoy the diverse food offered by chefs around you!</p>
      <br>
    </header>

    <!-- Search Field -->
    <section>
      <table>
        <thead>
        </thead>
        <tbody>
        <tr>
          <form id="food-search" method="post" action="#">
            <input type="text" id="keyword" placeholder="What do you feel like eating today?" />

          </form>
          <br>
          <a href="search?login=false"><img src="images/magnifying-glass32.png" alt="none"/></a>
        </tr>
        </tbody>
      </table>
    </section>
    <br>
    <br>
    <br>
    <div id="btm-header">
      <!-- Footer -->
      <footer id="footer">
        <br>
        <br>
        <br>
        Join Us On
        <!-- Add Pinterest, Facebook, Youtube, LinkedIn and remove Github and email symobls -->
        <ul class="icons">
          <li><a href="#" class="icon fa-twitter"><span class="label">Twitter</span></a></li>
          <li><a href="#" class="icon fa-instagram"><span class="label">Instagram</span></a></li>
          <li><a href="#" class="icon fa-facebook"><span class="label">Facebook<span></a></li>
          <li><a href="#" class="icon fa-pinterest"><span class="label">Pinterest<span></a></li>
          <li><a href="#" class="icon fa-youtube"><span class="label">Youtube<span></a></li>
          <li><a href="#" class="icon fa-linkedin"><span class="label">Linkedin<span></a></li>
        </ul>
        <ul class="copyright">
          <li>&copy; Chefbox</li>
        </ul>
      </footer>
    </div>

    <!-- Scripts -->
    <!--[if lte IE 8]><script src="js/ie/respond.min.js"></script><![endif]-->
    <script src="js/main.js"></script>
    <script src="js/jquery.js"></script>
    <script>
    function learnmore() {
      window.location.href ="helpHIW";
    }
    </script>
    {{> googleAnalytics}}
	</body>
</html>
